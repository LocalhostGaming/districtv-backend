// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Player    Player[]
  role      Role     @default(PLAYER)
}

model Player {
  id         String          @id @default(uuid())
  user       User            @relation(fields: [userId], references: [id])
  userId     String
  citizen    PlayerCitizen?  @relation(fields: [citizenId], references: [id])
  citizenId  String?         @unique
  position   PlayerPosition? @relation(fields: [positionId], references: [id])
  positionId String?         @unique
  stats      PlayerStats?    @relation(fields: [statsId], references: [id])
  statsId    String?         @unique
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt
}

model PlayerPosition {
  id      String  @id @default(uuid())
  x       Int
  y       Int
  z       Int
  heading Int
  Player  Player?
}

model PlayerStats {
  id     String  @id @default(uuid())
  health Int     @default(100)
  hunger Int     @default(100)
  thirst Int     @default(100)
  armor  Int     @default(0)
  Player Player?
}

model PlayerCitizen {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  dob       DateTime
  gender    Gender
  Player    Player?
}

enum Gender {
  male
  female
  other
}

enum Role {
  MASTER
  PLAYER
}
